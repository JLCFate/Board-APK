<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ControlActivity"
        android:layout_margin="15dp">
    <LinearLayout android:orientation="vertical" android:layout_centerInParent="true" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <Button
                android:id="@+id/Front_gate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/front_button_text" tools:ignore="ButtonStyle" android:layout_gravity="center" />
        <Button
                android:id="@+id/Back_gate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back_button_text" tools:ignore="ButtonStyle" android:layout_gravity="center"/>
    </LinearLayout>



</RelativeLayout>